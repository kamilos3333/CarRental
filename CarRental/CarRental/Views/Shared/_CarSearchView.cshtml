@model CarRental.Models.TempReservation

<div class="form-border">
    <h2>Search car rental</h2>
    <div class="container">
        @using (Html.BeginForm("SearchResult", "Form", FormMethod.Post))
        {
            <div class="row justify-content-md-center">
                <div class="col col-md-4">
                    <div class="form-group">
                        <label for="inputPassword4">Picking up</label>
                        @Html.EditorFor(model => model.Place1, new { htmlAttributes = new { @class = "form-control", @id = "placeIpt1" } })
                    </div>
                    <div class="form-group">
                        <label for="inputEmail4">Pick up date</label>
                        @Html.EditorFor(model => model.DateB, new { htmlAttributes = new { @class = "form-control datePicker" } })
                    </div>
                </div>
                <div class="col col-md-4">
                    <div class="form-group">
                        <label for="inputPassword4">Dropping off</label>
                        @Html.EditorFor(model => model.Place2, new { htmlAttributes = new { @class = "form-control", @id = "placeIpt2" } })
                    </div>
                    <div class="form-group">
                        <label for="inputPassword4">Dropp off date</label>
                        @Html.EditorFor(model => model.DateE, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Search <i class="fas fa-search"></i></button>
        }
    </div>
</div>


<script>
        $(function () {
            $("#placeIpt1").autocomplete({
                source: "/Form/getPlace"
            });
            $("#placeIpt2").autocomplete({
                source: "/Form/getPlace"
            });
        });

</script>