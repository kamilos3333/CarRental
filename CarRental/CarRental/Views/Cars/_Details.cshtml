@model CarRental.Models.Car
@{
    ViewBag.Title = "Details";
}

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">@Html.DisplayFor(model => model.Model) @Html.DisplayFor(model => model.Brand)</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-6"><img src="~/Images/@Html.DisplayFor(model => model.Photo)" class="img-fluid" /></div>
            <div class="col-6">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td>Transmission</td>
                            <td>@Html.DisplayFor(model => model.CarBody.Name)</td>
                        </tr>
                        <tr>
                            <td>Transmission</td>
                            <td>@Html.DisplayFor(model => model.Transmission.Name)</td>
                        </tr>
                        <tr>
                            <td>
                                Car conditioning
                            </td>
                            <td><i class="fas fa-check"></i></td>
                        </tr>
                        <tr>
                            <td>
                                Air bag
                            </td>
                            <td><i class="fas fa-check"></i></td>
                        </tr>
                        <tr>
                            <td>
                                Coast
                            </td>
                            <td>@Html.DisplayFor(model => model.CarClass.Cost)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>